<Window x:Class="Gita.Practice.App.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Gita.Practice.App.Views"
        mc:Ignorable="d"
        Title="Gita Practice App" Height="750" Width="1000">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />  <!-- main content -->
            <RowDefinition Height="20" /> <!-- status bar -->
        </Grid.RowDefinitions>

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="220" />
            <ColumnDefinition Width="5" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <!-- Left column placeholder (replace with real content as needed) -->
        <local:ChapterTreeView Grid.Row="0" Grid.Column="0" Background="Transparent" DataContext="{Binding}" />

        <!-- Vertical splitter between column 0 and column 2 (placed in column 1) -->
        <GridSplitter Grid.Row="0" Grid.Column="1"
                      Width="5"
                      HorizontalAlignment="Center"
                      VerticalAlignment="Stretch"
                      ResizeBehavior="PreviousAndNext"
                      ResizeDirection="Columns"
                      ShowsPreview="True"
                      Background="Gray" />

        <!-- Audio player placed in the 3rd column (index 2) -->
        <!--<local:AudioPlayerControl Grid.Row="0" Grid.Column="2" DataContext="{Binding AudioPlayerViewModel}" />-->
        <local:PlayView Grid.Row="0" Grid.Column="2" DataContext="{Binding}" />

        <!-- Status bar at the bottom spanning all columns -->
        <local:StatusView Grid.Row="1" Grid.ColumnSpan="3" DataContext="{Binding StatusViewModel}">
        </local:StatusView>
    </Grid>
</Window>

