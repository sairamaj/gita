<UserControl x:Class="Gita.Practice.App.Views.ChapterTreeView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Gita.Practice.App.Views"
             xmlns:vm="clr-namespace:Gita.Practice.App.ViewModels"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    
    <Grid>
        <TreeView x:Name="ChaptersTreeView"
                  ItemsSource="{Binding Chapters}"
                  HorizontalAlignment="Stretch"
                  VerticalAlignment="Stretch">
            <!-- Enable selection and expansion state to be driven by the view models.
                 Each ChapterViewModel is expected to expose `IsSelected` and `IsExpanded` properties. -->
            <TreeView.ItemContainerStyle>
                <Style TargetType="TreeViewItem">
                    <Setter Property="IsSelected" Value="{Binding IsSelected, Mode=TwoWay}" />
                    <Setter Property="IsExpanded" Value="{Binding IsExpanded, Mode=TwoWay}" />
                </Style>
            </TreeView.ItemContainerStyle>

            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate DataType="{x:Type vm:ChapterViewModel}">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Number}" />
                        <TextBlock Text=". " />
                        <TextBlock Text="{Binding Name}" />
                    </StackPanel>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
    </Grid>
</UserControl>
